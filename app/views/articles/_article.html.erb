<div class='col-4'>
  <figure class="figure">
    <figcaption class="figure-caption">
      <%= image_tag article.picture.thumb.url, class: 'figure-img img-fluid rounded' %>
      <%= article.title %>
      <%= link_to 'Show', article_path(article) %> 
      <%= link_to 'Edit', edit_article_path(article) %> 
      <%= link_to 'Destroy', article, method: :delete, data: { confirm: 'sure?'} %> 
    </figcaption>
  </figure>
</div>